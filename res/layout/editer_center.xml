<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:toggle="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dfdddd" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#dfdddd"
        android:orientation="vertical" >

        <!-- 第一组 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="#ffffff"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="8dp" >

            <ImageView
                android:layout_width="@dimen/my_menu_ico_size"
                android:layout_height="@dimen/my_menu_ico_size"
                android:layout_margin="10dp"
                android:src="@drawable/local_detailed_hui64" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="是否显示详细地图标注"
                android:textColor="@color/hui_main" />

            <com.zcw.togglebutton.ToggleButton
                android:id="@+id/editer_setmarker_type"
                android:layout_width="48dp"
                android:layout_height="25dp"
                toggle:onColor="@color/bulue_main" >
            </com.zcw.togglebutton.ToggleButton>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="1sp"
            android:background="#e1e1e1" />

        <LinearLayout
            android:id="@+id/exciteduser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="8dp" >

            <ImageView
                android:layout_width="@dimen/my_menu_ico_size"
                android:layout_height="@dimen/my_menu_ico_size"
                android:layout_margin="10dp"
                android:src="@drawable/excit_menu_hui64" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="退出用户"
                android:textColor="@color/hui_main" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:src="@drawable/left_jt_hui" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="1sp"
            android:background="#e1e1e1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="1sp"
            android:background="#e1e1e1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="1sp"
            android:background="#e1e1e1" />
        <!-- 第二组 -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="1sp"
            android:background="#e1e1e1" />


    </LinearLayout>

</ScrollView>