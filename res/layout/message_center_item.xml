<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp" >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/youhuiquan_yellow" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/collect_engineer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="优惠券"
                android:textColor="#38374a"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/collect_engineer_far"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/collect_engineer_name"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/collect_engineer_name"
                android:text="距离：0.5km"
                android:visibility="gone"
                android:textColor="#46b0da"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/collect_engineer_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/collect_engineer_name"
                android:text="恭喜您获得50元代金券"
                android:textColor="#5d5c68"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/collect_engineer_skill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/collect_engineer_score"
                android:text="时间：2016-08-22"
                android:textColor="#7d7d7d"
                android:textSize="10sp" />
        </RelativeLayout>
         <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/corners_blue_button10"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:text="详情"
                android:gravity="right"
                android:textColor="#ffffff"
                android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>