<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone" >

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/no_car_info" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/no_car_info_msg"
            android:textColor="#c1c1c1"
            android:textSize="18sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_margin="8dp"
        android:background="@drawable/corners_4jiao"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/carinfo_head_msg"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/default_head_w" />

        <TextView
            android:id="@+id/carinfo_userrenz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/corners_bg"
            android:layout_below="@id/carinfo_head_msg"
            android:paddingBottom="3dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingTop="3dp"
            android:text="已认证"
            android:textColor="#ffffff"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/carinfo_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/carinfo_userrenz"
            android:layout_marginTop="2dp"
            android:text="闲云野鹤 "
            android:textColor="#ffffff" />
        <TextView
            android:id="@+id/carinfo_userphone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/carinfo_username"
            android:layout_marginTop="2dp"
            android:text="M：18654895288 "
            android:textColor="#ffffff" />
        
        <TextView 
            android:id="@+id/carinfo_use_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:background="#880b1930"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:text="车辆数 2   |    订单数 188"
            android:textColor="#ffffff" />
        
    </RelativeLayout>

    <!-- 添加按钮 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#ececec"
        android:gravity="center"
        android:onClick="addnewcarmsg"
        android:orientation="vertical"
        android:padding="5dp" >

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/add_10" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/button_add_carinfo"
            android:textColor="#969696"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>