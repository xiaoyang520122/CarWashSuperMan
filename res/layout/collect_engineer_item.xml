<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/item_bg_white_shadow"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp" >

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/corners_imag"
            android:src="@drawable/main_table_ico_midle" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/collect_eng_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/engineer_defaul_head"
                android:gravity="center_vertical"
                android:text="傅剑虹"
                android:textColor="#38374a"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/collect_engineer_far"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/collect_eng_name"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/collect_eng_name"
                android:text="距离：0.5km"
                android:visibility="gone"
                android:textColor="#46b0da"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/collect_engineer_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/collect_eng_name"
                android:layout_marginTop="5dp"
                android:text="累计订单：158\t 好评率：100%"
                android:textColor="#5d5c68"
                android:textSize="12sp" />

            <!-- RatingBar
                android:id="@+id/collect_engineer_star"
                style="@style/roomRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="10.0dip"
                android:layout_alignBottom="@id/collect_engineer_far"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/collect_engineer_far"
                android:minHeight="0.0dip"
                android:numStars="5" /> -->

            <TextView
                android:id="@+id/collect_engineer_skill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/collect_engineer_score"
                android:text="技能：精洗  漆面养护  手工打蜡  铂金封釉  金钻封釉"
                android:textColor="#7d7d7d"
                android:textSize="10sp" />
        </RelativeLayout>
        
         <!--  TextView
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="详情>"
                android:gravity="right"
                android:textColor="@color/bulue_main"
                android:textSize="13sp" />-->
    </LinearLayout>

</LinearLayout>